<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/simple_border4"
    android:orientation="vertical"
    android:backgroundTint="@color/MyBgColor"
    tools:context=".AdminLogin">

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/radiogroup_id"
        android:layout_width="match_parent"
        android:layout_height="281dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="left"
        android:padding="20dp"
        >

        <RadioButton
            android:id="@+id/radio_mca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:buttonTint="#88C046"

            android:text="   MCA"
            android:textColor="#103003"
            android:textSize="25sp"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/radio_it"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:buttonTint="#88C046"

            android:text="   IT"
            android:textColor="#103003"
            android:textSize="25sp"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/radio_extc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:buttonTint="#88C046"

            android:text="   EXTC"
            android:textColor="#103003"
            android:textSize="25sp"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/radio_etrx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:buttonTint="#88C046"

            android:text="   ETRX"
            android:textColor="#103003"
            android:textSize="25sp"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/radio_comps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:buttonTint="#88C046"

            android:text="   COMPS"
            android:textColor="#103003"
            android:textSize="25sp"
            android:textStyle="normal" />


    </RadioGroup>

    <TextView
        android:id="@+id/text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#0C0B0B"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:textStyle="italic"

         />

    <EditText
        android:id="@+id/adminPassword"
        android:layout_width="324dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:inputType="textPassword"
        android:paddingLeft="15dp"
        android:textColor="#000000"
        android:layout_gravity="center"
         />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="148dp"
        android:layout_height="73dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:text="LOGIN"
        android:textAlignment="center"
        android:textColor="#0C0B0B"
        android:textSize="18dp"
         />


</LinearLayout>